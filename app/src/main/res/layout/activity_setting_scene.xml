<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/establish_bg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <RelativeLayout
            android:id="@+id/headerLayout"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/backButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Thiết lập"
                android:textColor="@android:color/white"
                android:textSize="24sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/updateLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Pro cao cấp"
                android:textColor="#fefa72" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/establish_bg_item">

                <!--                <Button-->
                <!--                    android:id="@+id/buyVipBtn"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="80dp"-->
                <!--                    android:layout_marginStart="0dp"-->
                <!--                    android:layout_marginEnd="0dp"-->
                <!--                    android:background="@drawable/" />-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Nâng cấp lên phiên bản VIP"
                    android:textColor="@android:color/white"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="40dp"
                    android:alpha="0.7"
                    android:text="Mua một lần"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center_vertical"
                    android:text="199,000 đ/năm"
                    android:textColor="#fefa72"
                    android:textSize="18sp" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/widgetLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/updateLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Công tắc điện"
                android:alpha="0.7"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/establish_bg_item">

                <!--                <Button-->
                <!--                    android:id="@+id/buyVipBtn"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="80dp"-->
                <!--                    android:layout_marginStart="0dp"-->
                <!--                    android:layout_marginEnd="0dp"-->
                <!--                    android:background="@drawable/" />-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Widget"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="40dp"
                    android:alpha="0.7"
                    android:text="Mua một lần"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center_vertical"
                    android:textColor="#fefa72"
                    android:textSize="18sp" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/unitSettingsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/widgetLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Công tắc điện"
                android:alpha="0.7"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/establish_bg_item"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Nhiệt độ -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <!-- ImageView commented out -->
                    <!-- <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_temperature" /> -->

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nhiệt độ"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="độ C"
                            android:textColor="#B0C4DE"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <ToggleButton
                        android:id="@+id/toggleTemperature"
                        android:layout_width="56dp"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textOff="C"
                        android:textOn="F" />
                </LinearLayout>

                <!-- Lượng mưa -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <!-- ImageView commented out -->
                    <!-- <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_rain" /> -->

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lượng mưa"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mi-li-mét"
                            android:textColor="#B0C4DE"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- Spinner commented out -->
                    <!-- <Spinner
                        android:id="@+id/spinnerRain"
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/blue_700" /> -->
                </LinearLayout>

                <!-- Khả năng hiển thị -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <!-- ImageView commented out -->
                    <!-- <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_visibility" /> -->

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Khả năng hiển thị"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="km"
                            android:textColor="#B0C4DE"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- Spinner commented out -->
                    <!-- <Spinner
                        android:id="@+id/spinnerVisibility"
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/blue_700" /> -->
                </LinearLayout>

                <!-- Tốc độ gió -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <!-- ImageView commented out -->
                    <!-- <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_wind" /> -->

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tốc độ gió"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dặm một giờ"
                            android:textColor="#B0C4DE"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- Spinner commented out -->
                    <!-- <Spinner
                        android:id="@+id/spinnerWind"
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/blue_700" /> -->
                </LinearLayout>

                <!-- Áp suất -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <!-- ImageView commented out -->
                    <!-- <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_pressure" /> -->

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Áp suất"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Milimet thủy ngân"
                            android:textColor="#B0C4DE"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- Spinner commented out -->
                    <!-- <Spinner
                        android:id="@+id/spinnerPressure"
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/blue_700" /> -->
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Container nhóm Ngày & Thời gian -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/unitSettingsContainer">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày &amp; Thời gian"
                android:textColor="#B0C4DE"
                android:textSize="14sp"
                android:textStyle="bold"
                android:alpha="0.7"
                app:layout_constraintTop_toBottomOf="@id/unitSettingsContainer" />

            <LinearLayout
                android:id="@+id/dateTimeSettingsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/establish_bg_item"
                android:orientation="vertical"
                android:padding="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/unitSettingsContainer">

                <!-- Sử dụng định dạng 24h -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <!-- ImageView commented out -->
                    <!-- <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_clock" /> -->

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="12dp"
                        android:text="Sử dụng định dạng 24h"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />

                    <Switch
                        android:id="@+id/switch24h"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />
                </LinearLayout>

                <!-- Định dạng ngày -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <!-- ImageView commented out -->
                    <!-- <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_calendar" /> -->

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="12dp"
                        android:text="Định dạng ngày"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />

                    <!-- Spinner commented out -->
                    <!-- <Spinner
                        android:id="@+id/spinnerDateFormat"
                        android:layout_width="96dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/blue_700" /> -->
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/notificationContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dateTimeSettingsContainer">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Thông báo"
                    android:alpha="0.7"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/establish_bg_item"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45dp"
                        android:text="Tin nhắn"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
